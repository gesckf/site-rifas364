// Filter buttons functionality
const filterButtons = document.querySelectorAll('.rounded-full');
filterButtons.forEach(button => {
button.addEventListener('click', function() {
filterButtons.forEach(btn => {
btn.classList.remove('bg-primary', 'text-white');
btn.classList.add('bg-white', 'border', 'border-gray-300', 'text-gray-700', 'hover:bg-gray-50');
});
this.classList.remove('bg-white', 'border', 'border-gray-300', 'text-gray-700', 'hover:bg-gray-50');
this.classList.add('bg-primary', 'text-white');
});
});

// Search functionality
const searchInput = document.querySelector('input[type="text"]');
searchInput.addEventListener('input', function() {
const searchTerm = this.value.toLowerCase();
const purchaseItems = document.querySelectorAll('.bg-white.rounded-xl.shadow-sm');
purchaseItems.forEach(item => {
const title = item.querySelector('h3').textContent.toLowerCase();
if (title.includes(searchTerm)) {
item.style.display = 'block';
} else {
item.style.display = 'none';
}
});
});

// Pagination functionality
const paginationButtons = document.querySelectorAll('.mt-8 button');
const contentContainer = document.querySelector('.space-y-6');

paginationButtons.forEach((button, index) => {
button.addEventListener('click', function() {
if (this.textContent.trim() === '2') {
contentContainer.innerHTML = page2Content;
paginationButtons.forEach(btn => {
if (btn.textContent.trim() === '1' || btn.textContent.trim() === '2') {
btn.classList.remove('bg-primary', 'text-white', 'border', 'border-gray-300', 'text-gray-700');
if (btn.textContent.trim() === '2') {
btn.classList.add('bg-primary', 'text-white');
} else {
btn.classList.add('border', 'border-gray-300', 'text-gray-700');
}
}
});
} else if (this.textContent.trim() === '1') {
contentContainer.innerHTML = page1Content;
paginationButtons.forEach(btn => {
if (btn.textContent.trim() === '1' || btn.textContent.trim() === '2') {
btn.classList.remove('bg-primary', 'text-white', 'border', 'border-gray-300', 'text-gray-700');
if (btn.textContent.trim() === '1') {
btn.classList.add('bg-primary', 'text-white');
} else {
btn.classList.add('border', 'border-gray-300', 'text-gray-700');
}
}
});
}
});
});
});
</script>
</body>
</html>
